#!/bin/bash

# Path to this script
PWD=`dirname $0`

# Paths to distributed files or source directories
BASEX=$PWD/../BaseX.jar
BASEXAPI=$PWD/../lib/basex-api.jar

# Classpath
LIB=$PWD/../lib
CP=$BASEX:$BASEXAPI:$LIB/jax-rx-1.3.1.jar:$LIB/jetty-6.1.25.jar:$LIB/jetty-util-6.1.25.jar:$LIB/servlet-api-2.5-20081211.jar:$LIB/jersey-server-1.4.jar:$LIB/jersey-core-1.4.jar:$LIB/asm-3.1.jar

# Options for virtual machine
VM=-Xmx512m

# Run code
java -cp "$CP" $VM org.basex.api.jaxrx.JaxRxServer "$@"
